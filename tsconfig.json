{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "#apis/*": ["apis/*"],
      "#common/*": ["common/*"],
      "#configs/*": ["configs/*"],
      "#jobs/*": ["jobs/*"],
      "#tests/*": ["tests/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"],
  "exclude": ["src/tests/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
